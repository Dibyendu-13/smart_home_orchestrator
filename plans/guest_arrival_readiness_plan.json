{
    "task": "Guest Arrival Readiness",
    "plan": [
        {
            "step_id": 1,
            "name": "Lighting Setup",
            "description": "Turn on lights in veranda and drawing room.",
            "reason": "Welcome guests with well-lit entrance.",
            "agent": "LightingAgent",
            "tool": "SmartLighting",
            "code": "set_light('veranda', 'bright_white', 90)",
            "input": {
                "room": "veranda",
                "color": "bright_white",
                "brightness": 90
            },
            "output": {
                "status": "on"
            },
            "state": {
                "before": {
                    "status": "off"
                },
                "after": {
                    "status": "on"
                }
            }
        },
        {
            "step_id": 2,
            "name": "Cool Living Room",
