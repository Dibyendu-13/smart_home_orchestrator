            "tool": "SmartFan",
            "code": "start_appliance('ceiling_fan', 'drawing_room')",
            "input": {
                "appliance_name": "ceiling_fan",
                "location": "drawing_room"
            },
            "output": {
                "status": "on"
            },
            "state": {
                "before": {
