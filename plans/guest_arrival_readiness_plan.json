            "input": {
                "doors": [
                    "main_gate",
                    "main_door"
                ]
            },
            "output": {
                "locked": false
            },
            "state": {
                "before": {
                    "main_gate": "locked",
                    "main_door": "locked"
                },
                "after": {
                    "main_gate": "unlocked",
                    "main_door": "unlocked"
